{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@libs/config": ["libs/config/src"],
      "@libs/config/*": ["libs/config/src/*"],
      "@libs/constant": ["libs/constant/src"],
      "@libs/constant/*": ["libs/constant/src/*"],
      "@libs/type": ["libs/type/src"],
      "@libs/type/*": ["libs/type/src/*"],
      "@libs/base": ["libs/base/src"],
      "@libs/base/*": ["libs/base/src/*"],
      "@libs/decorator": ["libs/decorator/src"],
      "@libs/decorator/*": ["libs/decorator/src/*"],
      "@libs/exception": ["libs/exception/src"],
      "@libs/exception/*": ["libs/exception/src/*"],
      "@libs/filter": ["libs/filter/src"],
      "@libs/filter/*": ["libs/filter/src/*"],
      "@libs/guard": ["libs/guard/src"],
      "@libs/guard/*": ["libs/guard/src/*"],
      "@libs/interceptor": ["libs/interceptor/src"],
      "@libs/interceptor/*": ["libs/interceptor/src/*"],
      "@libs/meta": ["libs/meta/src"],
      "@libs/meta/*": ["libs/meta/src/*"],
      "@libs/middleware": ["libs/middleware/src"],
      "@libs/middleware/*": ["libs/middleware/src/*"],
      "@libs/transformer": ["libs/transformer/src"],
      "@libs/transformer/*": ["libs/transformer/src/*"],
      "@libs/util": ["libs/util/src"],
      "@libs/util/*": ["libs/util/src/*"],
      "@libs/modules": ["libs/modules/src"],
      "@libs/modules/*": ["libs/modules/src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": true,
    "newLine": "lf",
    "strict": true,
    "strictFunctionTypes": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["typings/global.ts", "src/**/*.ts", "test/**/*.ts", "libs/**/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "node_modules", "not-yet-used-entities/**", "**.spec.ts"]
}
